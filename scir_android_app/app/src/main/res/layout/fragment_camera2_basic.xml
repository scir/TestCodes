<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.sss.library.camera.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <ImageView
        android:id="@+id/textureImageView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/common_google_signin_btn_text_light"
        android:layout_gravity="right"
        android:layout_toRightOf="@id/texture"
        />
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:layout_above="@id/texture"
            android:background="#4285f4">
        <Button
            android:id="@+id/buttonCapturePictureAndShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/picture" />
        <ImageButton
            android:id="@+id/buttonCamera2BasicFragment_info"
            android:contentDescription="@string/description_info"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:padding="20dp"
            android:src="@drawable/ic_action_info" />
    </FrameLayout>
</RelativeLayout>

